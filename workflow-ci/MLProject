name: Heart_Disease_ML_Project
conda_env: conda.yaml

entry_points:
  main:
    parameters:
      test_size:
        type: float
        default: 0.2
      random_state:
        type: int
        default: 42
      n_estimators:
        type: int
        default: 100
    command: "python modelling.py --test_size {test_size} --random_state {random_state} --n_estimators {n_estimators}"